<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF575757"
    tools:context=".AnaPanel"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="100dp">

    <EditText
        android:id="@+id/isadi"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/botton"
        android:ems="10"
        android:hint="İŞ ADI"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/firmaadi"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/botton"
        android:ems="10"
        android:hint="FİRMA ADI"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isadi" />

    <EditText
        android:id="@+id/avansalan"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/botton"
        android:ems="10"
        android:hint="AVANSI ALAN"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/firmaadi"
        tools:layout_editor_absoluteX="31dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="224dp"
        android:layout_height="77dp"
        android:background="@drawable/botton"
        android:onClick="ileri"
        android:text="İLERİ"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verilenavans"
        app:layout_constraintVertical_bias="0.881" />

    <EditText
        android:id="@+id/verilenavans"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/botton"
        android:ems="10"
        android:hint="VERİLEN AVANS TUTARI"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avansalan" />


</androidx.constraintlayout.widget.ConstraintLayout>